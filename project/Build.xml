		<compilerflag value="-D_WINDOWS" if="windows" />
		<compilerflag value="-D_MAC" if="mac" />
		<compilerflag value="-DUSE_SWF_EXPORTER_SERVICE" />
		<compilerflag value="/Zc:wchar_t-" if="windows" />
		
